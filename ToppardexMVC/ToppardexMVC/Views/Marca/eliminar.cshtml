@model Topardex.Marca
@{
    ViewData["Title"] = "Eliminar Marca";
}

<h1 class="mb-4 text-danger">Eliminar Marca</h1>

<div class="card p-4 shadow-sm">
    <p>¿Estás seguro de que querés eliminar la marca <strong>@Model.Nombre</strong>?</p>

    <form asp-action="EliminarConfirmado" method="post">
        <input type="hidden" asp-for="IdMarca" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a href="/Marca" class="btn btn-secondary ms-2">Cancelar</a>
    </form>
</div>
