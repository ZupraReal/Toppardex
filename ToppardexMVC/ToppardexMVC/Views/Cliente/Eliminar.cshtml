@model Topardex.Cliente
@{
    ViewData["Title"] = "Eliminar Cliente";
}

<h1 class="mb-4 text-danger">Eliminar Cliente</h1>

<div class="card p-4 shadow-sm">
    <p>¿Estás seguro de que querés eliminar al cliente <strong>@Model.Nombre</strong>?</p>

    <form asp-action="EliminarConfirmado" method="post">
        <input type="hidden" asp-for="IdCliente" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
    </form>
</div>
