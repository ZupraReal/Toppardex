@model Topardex.Cliente
@{
    ViewData["Title"] = "Editar Cliente";
}

<h1 class="mb-4">Editar Cliente</h1>

<form asp-action="Editar" method="post" class="card p-4 shadow-sm">
    <input type="hidden" asp-for="IdCliente" />

    <div class="mb-3">
        <label class="form-label">Nombre</label>
        <input asp-for="Nombre" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Apellido</label>
        <input asp-for="Apellido" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Pa√≠s</label>
        <input asp-for="Pais" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Fecha de Nacimiento</label>
        <input asp-for="FechaDeNacimiento" type="date" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-success">Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
</form>
