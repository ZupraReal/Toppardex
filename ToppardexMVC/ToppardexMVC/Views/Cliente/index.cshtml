@using Topardex
@using Microsoft.AspNetCore.Http
@model IEnumerable<Cliente>
@{
    ViewData["Title"] = "Clientes";
    var rol = Context.Session.GetString("Rol");
}

<h2>Clientes</h2>

    <a href="/Cliente/Crear" class="btn btn-success mb-3">+ Nuevo Cliente</a>


<table class="table table-bordered table-striped shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Pa√≠s</th>
            <th>Fecha de Nacimiento</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.IdCliente</td>
                <td>@c.Nombre</td>
                <td>@c.Apellido</td>
                <td>@c.Pais</td>
                <td>@c.FechaDeNacimiento.ToShortDateString()</td>
                <td>
                    <a href="/Cliente/Detalle/@c.IdCliente" class="btn btn-info btn-sm me-1">Ver</a>
                    <a href="/Cliente/Editar/@c.IdCliente" class="btn btn-warning btn-sm me-1">Editar</a>
                    @if (rol == "Admin")
                    {
                        <a href="/Cliente/Eliminar/@c.IdCliente" class="btn btn-danger btn-sm">Eliminar</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info mt-3">No hay clientes cargados.</div>
}
