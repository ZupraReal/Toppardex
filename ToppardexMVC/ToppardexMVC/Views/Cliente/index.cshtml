@using Topardex
@model IEnumerable<Cliente>
@{
    ViewData["Title"] = "Clientes";
}
<h2>Clientes</h2>
<a href="/Cliente/Crear" class="btn btn-primary mb-3">Nuevo Cliente</a>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Pa√≠s</th>
            <th>Fecha de Nacimiento</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.IdCliente</td>
                <td>@c.Nombre</td>
                <td>@c.Apellido</td>
                <td>@c.Pais</td>
                <td>@c.FechaDeNacimiento.ToShortDateString()</td>
                <td><a href="/Cliente/Detalle/@c.IdCliente" class="btn btn-sm btn-info">Ver</a></td>
            </tr>
        }
    </tbody>
</table>
