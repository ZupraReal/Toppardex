@inject IHttpContextAccessor HttpContextAccessor
@{
    var rol = HttpContextAccessor.HttpContext?.Session.GetString("Rol");
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Toppardex</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <style>
        /* Mantener footer al fondo */
        html, body {
            height: 100%;
        }

        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        /* El main debe ocupar el espacio disponible */
        main {
            flex: 1 0 auto;
        }

        /* Contenedor interior para separar padding del main */
        .page-container {
            flex: 1 0 auto;
        }
    </style>
</head>
<body>
    <!-- NAVBAR RESPONSIVE -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="/">Toppardex</a>

            <!-- Botón hamburguesa (colapsable en celular) -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Links -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                    @if (rol != null)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Cliente" asp-action="Index">Clientes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Marca" asp-action="Index">Marcas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Producto" asp-action="Index">Productos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Pedido" asp-action="Index">Pedidos</a>
                        </li>
                    }

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Contacto">Contacto</a>
                    </li>
                </ul>

                <ul class="navbar-nav ms-auto">
                    @if (rol != null)
                    {
                        <li class="nav-item">
                            <a class="nav-link text-warning" asp-controller="Login" asp-action="CerrarSesion">Cerrar sesión</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Contenedor de página que ocupa el espacio entre navbar y footer -->
    <div class="page-container container mt-3">
        <main role="main" class="pb-3">
        <!-- Mensajes globales -->
        <div class="container mt-3">
            @if (TempData["MensajeExito"] != null)
            {
                <div class="alert alert-success text-center">
                    @TempData["MensajeExito"]
                </div>
            }
            else if (TempData["MensajeError"] != null)
            {
                <div class="alert alert-danger text-center">
                    @TempData["MensajeError"]
                </div>
            }
        </div>



            @RenderBody()
        </main>
    </div>

    <!-- Footer pegado al final -->
    <footer class="bg-dark text-center text-light py-3 mt-auto">
        <div class="container">
            <p class="mb-0">&copy; @DateTime.Now.Year - Toppardex</p>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
    // Ocultar automáticamente los alertas después de 4 segundos
        setTimeout(() => {
            document.querySelectorAll('.alert').forEach(a => a.style.display = 'none');
        }, 4000);
    </script>

    @RenderSection("Scripts", required: false)
    
</body>
</html>
