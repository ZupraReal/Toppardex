@using Topardex
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@model IEnumerable<Producto>

@{
    ViewData["Title"] = "Lista de Productos";
    var rol = HttpContextAccessor.HttpContext.Session.GetString("Rol");
}

<h1 class="mb-4">Productos</h1>

@if (rol == "Admin")
{
    <a asp-action="Crear" class="btn btn-success mb-3">+ Nuevo Producto</a>
}

<table class="table table-striped table-hover align-middle shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Stock</th>
            <th>Marca</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.IdProducto</td>
                <td>@p.Nombre</td>
                <td>$@p.Precio</td>
                <td>@p.Stock</td>
                <td>@p.IdMarca</td>
                <td class="text-center">
                    <a asp-action="Detalle" asp-route-id="@p.IdProducto" class="btn btn-info btn-sm me-1">
                        <i class="bi bi-eye"></i> Ver
                    </a>

                    @if (rol == "Admin")
                    {
                        <a asp-action="Editar" asp-route-id="@p.IdProducto" class="btn btn-warning btn-sm me-1">
                            <i class="bi bi-pencil"></i> Editar
                        </a>
                        <a asp-action="Eliminar" asp-route-id="@p.IdProducto" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i> Eliminar
                        </a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info mt-3">No hay productos cargados.</div>
}
