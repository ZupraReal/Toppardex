@using Topardex
@model Producto
@{
    ViewData["Title"] = "Editar Producto";
}

<h2>Editar Producto</h2>

<form asp-action="Editar" method="post">
    <input type="hidden" asp-for="IdProducto" />

    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Precio"></label>
        <input asp-for="Precio" class="form-control" />
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Stock"></label>
        <input asp-for="Stock" class="form-control" />
        <span asp-validation-for="Stock" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Marca</label>
        <select asp-for="IdMarca" class="form-control" asp-items="@(new SelectList(ViewBag.Marcas, "IdMarca", "Nombre"))"></select>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancelar</a>
</form>
