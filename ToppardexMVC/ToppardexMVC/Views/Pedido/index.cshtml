@using Topardex
@model IEnumerable<Topardex.Pedido>
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Pedidos";
    var rol = HttpContextAccessor.HttpContext.Session.GetString("Rol");

    var diccionarioNombres = ViewBag.NombresClientes as Dictionary<int, string>;
}

<h1 class="mb-4">Listado de Pedidos</h1>
<div class="mb-3">
    @if (rol == "Admin" || rol == "Empleado")
    {
        <a asp-action="Crear" class="btn btn-success ms-2">Nuevo Pedido</a>
    }
    <a asp-action="Buscar" class="btn btn-info ms-2">Buscar por Cliente</a>
    <a asp-action="BuscarPorId" class="btn btn-info ms-2">Buscar por ID</a>
</div>

<table class="table table-striped table-bordered text-center align-middle shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Cliente</th>
            <th>Fecha</th>
            <th>Total</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var pedido in Model)
            {
                <tr>
                    <td>@pedido.IdPedido</td>
                    
                    <td>
                        @if (diccionarioNombres != null && diccionarioNombres.ContainsKey(pedido.IdCliente))
                        {
                            @diccionarioNombres[pedido.IdCliente]
                        }
                        else
                        {
                            <span>ID: @pedido.IdCliente</span>
                        }
                    </td>

                    <td>@(pedido.FechaVenta.HasValue ? pedido.FechaVenta.Value.ToString("dd/MM/yyyy") : "-")</td>
                    <td>$@pedido.Total</td>
                    <td>
                        <a href="/Pedido/Detalle/@pedido.IdPedido" class="btn btn-info btn-sm me-1">Ver</a>
                        
                        
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info mt-3">No hay pedidos cargados.</div>
}