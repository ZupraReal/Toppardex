@{
    ViewData["Title"] = "Buscar Pedido por ID";
}

<h2>Buscar Pedido por ID</h2>

<form asp-action="BuscarPorId" method="post">
    <div class="mb-3">
        <label>ID del Pedido:</label>
        <input type="number" name="idPedido" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Buscar</button>
</form>

@if (ViewBag.Mensaje != null)
{
    <div class="alert alert-warning mt-3">@ViewBag.Mensaje</div>
}
